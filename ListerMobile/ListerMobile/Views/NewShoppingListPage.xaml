        <StackLayout Spacing="15" Padding="15">
            <Label Text="Nazwa Listy" FontSize="Medium" />
            <Entry Text="{Binding ShoppingList.Name}" FontSize="Small" Placeholder="Dzisiejsza data" />
            <ImageButton Source="mic_icon.png" HeightRequest="60" Clicked="SpeakButton_Clicked"/>
            <Label Grid.Row="1" Text="Treść" FontSize="Medium" />
            <Editor x:Name="VoiceBodyEditor"
                        Grid.Row="2"
                    Text="{Binding ShoppingList.Body}"
                    FontSize="Small" 
                    Margin="0"
                    AutoSize="TextChanges"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ImageButton Grid.Column="0" VerticalOptions="Center" Source="cancel_red.png" BackgroundColor="Transparent" BorderColor="Transparent" Clicked="Cancel_Clicked"/>
                <ImageButton Grid.Column="1" VerticalOptions="Center" Source="check_green.png" BackgroundColor="Transparent" BorderColor="Transparent" Clicked="Save_Clicked"/>
            </Grid>


            
        </StackLayout>

    </ContentPage> 



</TabbedPage>