            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Tu bedzie mozna tworzyc liste głosową"/>

            <ImageButton Grid.Row="2" Source="mic_icon.png" Aspect="AspectFit" Clicked="SpeakButton_Clicked">
                
            </ImageButton>
