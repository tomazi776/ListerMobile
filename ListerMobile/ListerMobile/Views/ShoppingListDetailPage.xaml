<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListerMobile.Views.ShoppingListDetailPage"
             Title="{Binding Title}">
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nazwa Listy:" FontSize="Medium" />
        <Entry Text="{Binding ShoppingList.Name}" FontSize="Small"/>
        <Label Text="Produkty:" FontSize="Medium" />
        <ScrollView>
            <Editor Text="{Binding ShoppingList.Body}" FontSize="Small"/>

        </ScrollView>
    </StackLayout>
</ContentPage>