<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListerMobile.Views.StartingPage" Title="Welcome to Lister" BackgroundColor="#00aecc">
    <ContentPage.Content>
        <StackLayout Margin="0,50,0,0">
            <Image Source="appicon.png" HeightRequest="120" WidthRequest="120" />
            <Label Margin="0,10,0,10" Text="Lister - Twoja lista zakupów!" LineBreakMode="WordWrap"
                       TextColor="White"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" />
            <Label Margin="5,25,5,40" Text="Dodawaj produkty, ceny, wysyłaj znajomym listy i kontroluj swój budżet!" 
                   TextColor="White"
                   FontSize="Medium"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"/>
        </StackLayout>
                


    </ContentPage.Content>
</ContentPage>